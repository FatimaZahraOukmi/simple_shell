#include <stdio.h>
#include <stdlib.h> 
#include <unistd.h>

#define PROMPT  prompt "> "

int main(void){
	while (1) {
		printf(PROMPT);

		char *cmd = malloc(100); 
		fgets(cmd, 100, stdin);

		pid_t pid = fork();

		if (pid == 0) {
			// Child     
			execlp(cmd, cmd, (char*)0);             
			exit(0); 
		}
		else {
 			// Parent
			wait(NULL); 

			free(cmd);         
		}  
            
		if (feof(stdin)) break;           
	}
}
